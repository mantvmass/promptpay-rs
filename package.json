{
  "name": "promptpay-rs",
  "version": "0.1.0",
  "description": "A Rust library for generating PromptPay QR code payloads with WebAssembly support for TypeScript/JavaScript",
  "main": "dist/index.js",
  "types": "types/promptpay-rs.d.ts",
  "files": [
    "dist/",
    "types/",
    "examples/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "wasm-pack build --target web --out-dir dist",
    "build:node": "wasm-pack build --target nodejs --out-dir dist",
    "build:bundler": "wasm-pack build --target bundler --out-dir dist",
    "build:all": "npm run build && npm run build:node && npm run build:bundler",
    "test": "wasm-pack test --headless --firefox",
    "test:browser": "wasm-pack test --headless --chrome",
    "clean": "rm -rf dist target",
    "prepublishOnly": "npm run build:all"
  },
  "keywords": [
    "promptpay",
    "qr-code",
    "thailand",
    "payment",
    "emvco",
    "webassembly",
    "rust",
    "typescript",
    "javascript"
  ],
  "author": "Phumin Maliwan <kliop2317@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mantvmass/promptpay-rs.git"
  },
  "bugs": {
    "url": "https://github.com/mantvmass/promptpay-rs/issues"
  },
  "homepage": "https://github.com/mantvmass/promptpay-rs#readme",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "wasm-pack": "^0.12.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
} 